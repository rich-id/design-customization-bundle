{
    "name": "rich-id/design-customization-bundle",
    "description": "Design customization bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "RichId",
            "homepage": "https://www.rich-id.com"
        }
    ],
    "support": {
        "email": "contact@rich-id.com",
        "source": "https://github.com/rich-id/design-customization-bundle",
        "docs": "https://github.com/rich-id/design-customization-bundle/blob/master/README.md",
        "issues": "https://github.com/rich-id/design-customization-bundle/issues"
    },
    "require": {
        "php": "^8.1",
        "doctrine/migrations": "^3.0",
        "doctrine/orm": "^2.7 || ^3.0",
        "fresh/doctrine-enum-bundle": "^8.0 || ^9.0 || ^10.0",
        "richcongress/bundle-toolbox": "v2.x-dev",
        "symfony/cache": "^6.0 || ^7.0",
        "symfony/routing": "^6.0 || ^7.0",
        "symfony/security-bundle": "^6.0 || ^7.0",
        "symfony/translation": "^6.0 || ^7.0",
        "symfony/twig-bundle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^2.0",
        "phpunit/phpunit": "^9.5",
        "richcongress/static-analysis": "v0.2.x-dev",
        "richcongress/test-suite": "v0.2.x-dev",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "RichId\\DesignCustomizationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RichId\\DesignCustomizationBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || cghooks update"
        ]
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "docker-compose exec -T application ./vendor/bin/php-cs-fixer fix"
            ],
            "pre-push": [
                "docker-compose exec -T application ./vendor/bin/php-cs-fixer fix --dry-run",
                "docker-compose exec -T application ./vendor/bin/static_analysis"
            ]
        }
    }
}
